{
    "version": 2,
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/index.ts" },
      { "source": "/(.*)", "destination": "/index.html" }
    ],
    "builds": [
      { "src": "server/index.ts", "use": "@vercel/node" },
      { "src": "dist/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/server/index.ts" },
      { "src": "/(.*)", "dest": "/index.html" }
    ]
  }
  